<h2>Cadastro de Currículo</h2>

<form action="/Curriculo/Cadastro" method="post">
    <div class="form-horizontal">


        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Informações Pessoais</h3>
            </div>

            <div class="panel-body">


                <div class="form-group">
                    <label for="Nome" class="control-label col-md-2">Nome:</label>
                    <div class="col-md-7">
                        <input type="text" name="Nome" class="form-control" placeholder="Digite seu nome" required/>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Email" class="control-label col-md-2">Email:</label>
                    <div class="col-md-7">
                        <input type="email" name="Email" class="form-control" placeholder="Digite seu email" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="DataNasciemento" class="control-label col-md-2">DataNascimento:</label>
                    <div class="col-md-2">
                        <input type="date" name="DataNascimento" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="Altura" class="control-label col-md-2">Altura(m):</label>
                    <div class="col-md-2">
                        <input type="number" step="0.01" name="Altura" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="Site" class="control-label col-md-2">Site:</label>
                    <div class="col-md-7">
                        <input type="text" name="Site" class="form-control" placeholder="Facebook, Linkedin," />
                    </div>
                </div>


                <div class="form-group">
                    <label for="EstadoCivil" class="control-label col-md-2">Estado Civil:</label>
                    <div class="col-md-4">
                        <select name="EstadoCivil" class="form-control" required>
                            <option value="">-- Selecione --</option>
                            <option value="Casado(a)">Casado(a)</option>
                            <option value="Solteiro(a)">Solteiro(a)</option>
                            <option value="Viúvo(a)">Viúvo(a)</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">
                        Sexo:
                    </label>
                    <div class="col-md-10">
                        <div class="radio-inline">
                            <label>
                                <input type="radio" name="Sexo" value="Masculino" />
                                Masculino
                            </label>
                        </div>
                        <div class="radio-inline">
                            <label>
                                <input type="radio" name="Sexo" value="Feminino" />
                                Feminino
                            </label>
                        </div>
                    </div>
                </div>


            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Endereço</h3>
            </div>
            <div class="panel-body">


                <div class="form-group">
                    <label for="Cep" class="control-label col-md-2">CEP:</label>
                    <div class="col-md-2">
                        <input type="text" name="Cep" class="form-control" />
                    </div>
                </div>


                <div class="form-group">
                    <label for="Endereco" class="control-label col-md-2">Endereço:</label>
                    <div class="col-md-7">
                        <input type="text" name="Endereco" class="form-control" />
                    </div>
                </div>



            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Contato</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    <label for="Telefone" class="control-label col-md-2">Telefone:</label>
                    <div class="col-md-4">
                        <input type="text" name="Telefone" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="Celular" class="control-label col-md-2">Celular:</label>
                    <div class="col-md-4">
                        <input type="text" name="Celular" class="form-control" />
                    </div>
                </div>

            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Conhecimentos</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">

                    <div class="col-md-10">
                        <div class="checkbox-inline">
                            <label>
                                <input type="checkbox" name="Html" /> Html
                            </label>
                        </div>
                        <div class="checkbox-inline">
                            <label>
                                <input type="checkbox" name="Css" /> CSS
                            </label>
                        </div>
                        <div class="checkbox-inline">
                            <label>
                                <input type="checkbox" name="JavaScript" /> JavaScript
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Conhecimento" class="control-label col-md-2"> Mais conhecimentos:</label>
                    <div class="col-md-10">
                        <textarea name="Conhecimento" rows="10" class="form-control" placeholder="Digite os seus conhecimentos"></textarea>
                    </div>
                </div>
            </div>

        </div>


        <div class="form-group">
            <div class="text-center col-md-12">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </div>

        </div>

</form>

